{
    "name": "mini-erp-lite",
    "version": "1.0.0",
    "description": "AI-Powered Inventory Management System",
    "private": true,
    "scripts": {
        "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "cd backend && npm run dev",
        "build": "cd frontend && npm run build",
        "start": "cd backend && npm start",
        "setup": "cd backend && npm run setup-db",
        "clean": "rm -rf node_modules frontend/node_modules backend/node_modules frontend/dist"
    },
    "keywords": [
        "erp",
        "inventory",
        "management",
        "ai",
        "react",
        "nodejs",
        "postgresql"
    ],
    "author": "Mini ERP Lite Team",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Lokeessshhh/AI-ERPNext.git"
    },
    "bugs": {
        "url": "https://github.com/Lokeessshhh/AI-ERPNext/issues"
    },
    "homepage": "https://github.com/Lokeessshhh/AI-ERPNext#readme"
}